CREATE TABLE movies (id INTEGER PRIMARY KEY, 
    title TEXT, 
    release INTEGER);

CREATE TABLE tv_shows (id INTEGER PRIMARY KEY,      title TEXT, 
    release INTEGER);
    
CREATE TABLE actors (id INTEGER PRIMARY KEY, 
    name TEXT, 
    movie_id INTEGER, 
    show_id INTEGER);

